@{ 
    ViewData["Title"] = "Form";
}

@model Mission13.Models.Bowler

@*Current Bowler Info*@


@*Edit bowler*@
<h3>Edit Bowler</h3>

@*form to edit bowler*@
<form method="post" asp-controller="Home" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>

        <label asp-for="BowlerID">Bowler ID: </label>
        @*we don't want the ID to be changeable, hence the disabled value*@
        <input class="form-control" disabled value="BowlerID" />

        @*input fields*@
        <label asp-for="BowlerFirstName">First Name</label>
        <input asp-for="BowlerFirstName" /><br />

        <label asp-for="BowlerMiddleInit">Middle Initial</label>
        <input asp-for="BowlerMiddleInit" /><br />

        <label asp-for="BowlerLastName">Last Name</label>
        <input asp-for="BowlerLastName" /><br />

        <label asp-for="BowlerAddress">Address</label>
        <input asp-for="BowlerAddress" /><br />

        <label asp-for="BowlerCity">City</label>
        <input asp-for="BowlerCity" /><br />

        <label asp-for="BowlerZip">Zip</label>
        <input asp-for="BowlerZip" /><br />

        <label asp-for="BowlerPhoneNumber">Phone #</label>
        <input asp-for="BowlerPhoneNumber" /><br />

        <label asp-for="TeamID">TeamID</label>
        <input asp-for="TeamID" />

        <button type="submit" class="btn btn-success btn-sm-float-end">Confirm Edit</button>
</form>